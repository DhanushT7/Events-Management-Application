#RENAME THIS FILE TO .env BEFORE RUNNING THE APPLICATION
# AND FILL IN THE REQUIRED VALUES
# Server Configuration
PORT=5050

# Database Configuration
MONGO_URI=mongodb://localhost:27017/events-management

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# Email Configuration (for password reset and notifications)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password

# Optional: Email Configuration for Custom SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false

# Application Configuration
NODE_ENV=development

# File Upload Configuration
MAX_FILE_SIZE=5MB
UPLOAD_PATH=./uploads

# PDF Generation Configuration
PDF_TEMP_PATH=./temp/pdfs

# Anna University Branding
UNIVERSITY_NAME=Anna University
UNIVERSITY_ADDRESS=Sardar Patel Road, Guindy, Chennai - 600 025
UNIVERSITY_PHONE=+91-44-2235-8661
UNIVERSITY_EMAIL=info@annauniv.edu
UNIVERSITY_WEBSITE=www.annauniv.edu

# Department Configuration
DEPARTMENT_NAME=Department of Computer Science and Engineering
DEPARTMENT_HEAD=Dr. Department Head Name
DEPARTMENT_EMAIL=cse@annauniv.edu
DEPARTMENT_PHONE=+91-44-2235-7120

# Session Configuration
SESSION_TIMEOUT=24h
REFRESH_TOKEN_EXPIRY=7d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Development/Debug Configuration
DEBUG_MODE=true
LOG_LEVEL=info

# Production Configuration (uncomment for production)
# NODE_ENV=production
# DEBUG_MODE=false
# LOG_LEVEL=error